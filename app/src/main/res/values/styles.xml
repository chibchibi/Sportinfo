<resources>
    <!-- Colors -->
    <color name="colorMain">#0277bd</color>
    <color name="colorMainDark">#01579b</color>
    <color name="colorMainAccent">#e8eaf6</color>
    <color name="colorMainRow">#3f51b5</color>
    <color name="colorText">#000000</color>
    <color name="colorTextLight">#FFFFFF</color>
    <color name="colorRowHighlight">#ffffd7</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorMainDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorMainAccent</item>
    </style>

</resources>
